        mc:Ignorable="d"
        Title="Capitalisation" Height="281.595" Width="388.65">

    <Grid>

        <TextBox HorizontalAlignment="Left" x:Name="MoneyCapit" Height="26" Margin="10,123,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="187" RenderTransformOrigin="0.039,0.599"/>
        <Label Content="внести деньги для вклада:" HorizontalAlignment="Left" Height="27" Margin="10,91,0,0" VerticalAlignment="Top" Width="167"/>
        <Label Content="Сколько получите через год:" HorizontalAlignment="Left" Height="28" Margin="10,154,0,0" VerticalAlignment="Top" Width="187" RenderTransformOrigin="0.184,0.358"/>
        <Label Content="" x:Name="MoneyEarsCapit" HorizontalAlignment="Left" Height="34" Margin="10,182,0,0" VerticalAlignment="Top" Width="187"/>
