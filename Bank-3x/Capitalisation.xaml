        <ComboBox HorizontalAlignment="Left"  x:Name="Combobox" Height="30" Margin="10,42,0,0" VerticalAlignment="Top" Width="187" >
            <TextBlock x:Name="CapitalisationYES">вклад с капитализацией</TextBlock>
            <TextBlock x:Name="CapitalisationNO">вклад без капитализации</TextBlock>
        </ComboBox>

    </Grid>
</Window>
